.slideloop
  width 100%
  position relative
  overflow-x hidden
  box-sizing border-box
  vertical-align top

.slider-container
  position relative
  display inline-block
  transition left ease-in-out 1s
  left 0%
  
  .slide
    box-sizing border-box
    position relative
    width 100%
    height 100%
    float left
    display inline-block